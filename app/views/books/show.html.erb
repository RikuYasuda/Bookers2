<body>
  <main>
    <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
      <% end %>
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <%= render 'layouts/list', user: @user %>
                <%= render 'layouts/new', book: @book_new %>
            </div>
            <div class='col-md-8 offset-md-1'>
              <h2>Book detail</h2>
              <table class='table'>
                <tr>
                  <td>
                    <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
                    <span><%= @user.name%></span>
                    <% end %>
                  </td>
                  <td>
                    <%= @book.title %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <td>
                    <% if @book.favorited_by?(current_user) %>
                      <%= link_to book_favorites_path(@book), method: :DELETE do %> <span style="color:red">❤️</span>
                      <%= @book.favorites.count %>
                    <% end %>
                    <% else %>
                      <%= link_to book_favorites_path(@book) , method: :POST do %> ❤
                      <%= @book.favorites.count %>
                    <% end %>
                    <% end %>
                  </td>
                  <td> コメント数:
                    <%= @book.comments.count %>
                  </td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
                  </td>
                  <% end %>
                  <td>
                    <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "Are you sure?" %>
                  </td>
                    <% end %>
                </tr>
            </div>
              <tbody>
              <% @book.comments.each do |comment| %>
                <tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
                    <span><%= @user.name%></span>
                    <% end %>
                  </td>
                  <td>
                    <%= comment.comment %>
                  </td>
                  <td>
                    <% if comment.user == current_user %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_comment_path(@book,comment),class: 'btn btn-sm btn-danger', method: :delete %>
                  </td>
                </tr>
                    <% end %>
                    <% end %>
              </tbody>
              </table>
              <div class='table'>
              <%= form_with(model:[@book,@comment], local: true) do |f| %>
              <%= f.text_area :comment, size: "40x5" %>
              <div class="form-group">
                <p>
                  <%= f.submit '送信' %>
                </p>
              <% end %>
              </div>
              </div>
          </div>
        </div>
  </main>
  <footer></footer>
</body>