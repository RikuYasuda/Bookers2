<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<div class="container">
  <div class="row">

   <div class="col-lg-4">

<%= render 'layouts/list', user: @user %>
<%= render 'layouts/new', book: @book_new %>

   </div>

   <div class="col-lg-8">


<div>
  <%= attachment_image_tag @user_img, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= link_to @user.name , user_path(@user.id) %>
  <%= @book.title %><%= @book.body %>
  <td><% if @book.user == current_user %>
  <%= link_to "edit", edit_book_path(@book.id) %></td>
  <% end %>
<td><% if @book.user == current_user %>
<%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</div>
<% end %>

</div>

  </div>
</div>
