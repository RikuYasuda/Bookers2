<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="navbar-brand">
        <%= link_to "Bookers", root_path, class: 'text-light' %>
      </div>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id), class: 'nav-link fas fa-home nav-link text-light' do %> Home
                  <% end %>
              </li>
              <li>
                <%= link_to users_path, class: 'nav-link fas fa-home nav-link text-light' do %> Users
                  <% end %>
              </li>
              <li>
                <%= link_to books_path, class: 'nav-link fas fa-home nav-link text-light' do %> books
                  <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link fas fa-home nav-link text-light' do %> logout
                  <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path, class: 'nav-link text-white fas fa-home nav-link text-light' do %> Home
                  <% end %>
              </li>
              <li>
                <%= link_to homes_show_path, class: 'nav-link text-white fas fa-home nav-link text-light' do %> About
                  <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class: 'nav-link text-white fas fa-home nav-link text-light' do %> sign up
                  <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: 'nav-link text-white fas fa-home nav-link text-light' do %> login
                  <% end %>
              </li>
              <% end %>
          </ul>
        </div>

    </nav>
  </header>
  <main>
   <%= yield %>
  </main>
  <footer>
    <div class='container mt-5'>
      <div class='row'>
        <div class='mx-auto'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
  </html>