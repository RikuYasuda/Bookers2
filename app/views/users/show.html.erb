<div class="container">
  <div class="row">

   <div class="col-lg-4">

<%= render 'layouts/list', user: @user %>
<%= render 'layouts/new', book: @book %>

   </div>

   <div class="col-lg-8">

<% @books.each do |book| %>

<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <span> <%= link_to book.title , book_path(book.id) %></span>
  <span> <%= book.body %></span>
</div>
<% end %>
</div>

  </div>
</div>

